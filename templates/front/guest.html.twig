{% extends 'front.html.twig' %}

{% block front %}
    <div class="row">
        <div class="col-12">
            <h3 class="mb-4">{{ guest.name }}</h3>
            <p class="mb-5 w-100">{{ guest.description }}</p>
            <div class="row">
                {% for media in medias %}
                    <div class="col-4 media mb-4">
                        <img class="w-100" src="{{ asset(media.path) }}" alt="{{ media.title }}">
                    </div>
                {% endfor %}
            </div>

            <nav aria-label="Page navigation">
                <ul class="pagination">
                    {% if page > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('guest', {id: guest.id, page: 1}) }}">Première page</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="{{ path('guest', {id: guest.id, page: page - 1}) }}">Précédent</a>
                        </li>
                    {% endif %}

                    {% for i in 1..total %}
                        <li class="page-item {% if i == page %}active{% endif %}">
                            <a class="page-link" href="{{ path('guest', {id: guest.id, page: i}) }}">{{ i }}</a>
                        </li>
                    {% endfor %}

                    {% if page < total %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('guest', {id: guest.id, page: page + 1}) }}">Suivant</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="{{ path('guest', {id: guest.id, page: total}) }}">Dernière page</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </div>
{% endblock %}

